@model FinalProject.Models.DashBoard
@{
    ViewBag.Title = "Dashborad";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!--  page-wrapper -->


<div id="page-wrapper">

    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-10">
            <h1 class="page-header">Dashboard</h1>
        </div>
        <!--End Page Header -->
    </div>

    <div class="row">
        <!-- Welcome -->
        <div class="col-lg-10">
            <div class="alert alert-info">
                <i class="fa fa-folder-open"></i><b>&nbsp;Hello ! </b>Welcome Back <b>@Session["admin"] </b>
               
            </div>
        </div>
        <!--end  Welcome -->
    </div>


    <div class="row">
        <!--quick info section -->
        <div class="col-lg-3">
           
        </div>
        <div class="col-lg-3">
            
        </div>
        <div class="col-lg-3">
            
        </div>
        <div class="col-lg-3">
            
        </div>
        <!--end quick info section -->
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!--Simple table example -->
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i>Users Added Since Last 20 days
   
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var u in Model.user) { 
                                        <tr>
                                            <td>@u.Id</td>
                                            <td>@u.Date</td>
                                            <td>@u.Name</td>
                                            <td>@u.Password</td>
                                        </tr>
                                        }
                                       
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!--End simple table example -->
            <!--    Context Classes  -->
            <div class="panel panel-default">

                <div class="panel-heading">
                    New Songs Uploaded 20 days ago
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Catogory</th>
                                    <th>likes</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model.upload)
                                {
                                    <tr>
                                        <td>@v.Id</td>
                                        <td>@v.Name</td>
                                        <td>@v.Catogory</td>
                                        <td>@v.likes</td>
                                        <td>@v.Date</td>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--  end  Context Classes  -->

        </div>

        <div class="col-lg-4">
            <div class="panel panel-primary text-center no-boder">
                <div class="panel-body yellow">
                    <i class="fa fa-bar-chart-o fa-3x"></i>
                    <h3>20,741 </h3>
                </div>
                <div class="panel-footer">
                    <span class="panel-eyecandy-title">
                        Daily User Visits
                    </span>
                </div>
            </div>
            <div class="panel panel-primary text-center no-boder">
                <div class="panel-body blue">
                    <i class="fa fa-thumbs-up fa-3x"></i>
                    <h3> @Model.like </h3>
                </div>
                <div class="panel-footer">
                    <span class="panel-eyecandy-title" >
                        Most Likes To the Song 
                    </span>
                    <h3>@Model.Name</h3>
                </div>
            </div>
            <div class="panel panel-primary text-center no-boder">
                <div class="panel-body green">
                    <i class="fa fa fa-floppy-o fa-3x"></i>
                    <h3>@Model.size</h3>
                </div>
                <div class="panel-footer">
                    <span class="panel-eyecandy-title">
                        New Data Uploaded
                    </span>
                </div>
            </div>
            <div class="panel panel-primary text-center no-boder">
                <div class="panel-body red">
                    <i class="fa fa-thumbs-up fa-3x"></i>
                    <h3>2,700 </h3>
                </div>
                <div class="panel-footer">
                    <span class="panel-eyecandy-title">
                        New User Registered
                    </span>
                </div>
            </div>







        </div>

    </div>

    





</div>
<!-- end page-wrapper -->
